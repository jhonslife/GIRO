{
  "name": "@mercearias/database",
  "version": "2.0.4",
  "description": "Database schema, migrations e types para o sistema GIRO",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  },
  "scripts": {
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:format": "prisma format",
    "db:validate": "prisma validate",
    "db:init": "tsx scripts/init_db.ts",
    "db:constraints": "tsx scripts/apply_constraints.ts",
    "build": "tsc",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@prisma/client": "^6.2.0",
    "argon2": "^0.30.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "dotenv": "^17.2.3",
    "prisma": "^6.2.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}